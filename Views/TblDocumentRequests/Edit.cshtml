 @model BuayaManagement.Models.TblDocumentRequest

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Document</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doc.DocName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReqDocNameBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DocDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotAmount)
        </dd>
    </dl>
</div>





<script>
    function printFunction() {
        var data = document.getElementById('data').innerHTML;
        document.getElementById('data').innerHTML = data;
        window.print();
    }
</script>

<div>
    <p>
        <button class="btn btn-primary" onclick="printFunction();">
            Print
        </button>
    </p>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
